<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.mapper.PurchaseOrderItemMapper">

    <resultMap id="BaseResultMap" type="org.example.entity.PurchaseOrderItem">
        <id column="id" property="id"/>
        <result column="order_id" property="orderId"/>
        <result column="material_id" property="materialId"/>
        <result column="quantity" property="quantity"/>
        <result column="price" property="price"/>
        <result column="amount" property="amount"/>
    </resultMap>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM purchase_order_item WHERE id = #{id}
    </select>

    <select id="selectList" resultMap="BaseResultMap">
        SELECT poi.*, m.name as material_name, m.specification, m.unit
        FROM purchase_order_item poi
        LEFT JOIN material m ON poi.material_id = m.id
        <where>
            <if test="orderId != null">
                AND poi.order_id = #{orderId}
            </if>
        </where>
        ORDER BY poi.id
    </select>

    <insert id="insert" parameterType="org.example.entity.PurchaseOrderItem" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO purchase_order_item (order_id, material_id, quantity, price, amount)
        VALUES (#{orderId}, #{materialId}, #{quantity}, #{price}, #{amount})
    </insert>

    <update id="update" parameterType="org.example.entity.PurchaseOrderItem">
        UPDATE purchase_order_item
        <set>
            <if test="materialId != null">material_id = #{materialId},</if>
            <if test="quantity != null">quantity = #{quantity},</if>
            <if test="price != null">price = #{price},</if>
            <if test="amount != null">amount = #{amount},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM purchase_order_item WHERE id = #{id}
    </delete>

    <delete id="deleteByOrderId">
        DELETE FROM purchase_order_item WHERE order_id = #{orderId}
    </delete>

</mapper>
